<% if resource.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(resource.errors.count, "erreur") %> empêché ce(tte) utilisateur d'être sauvegardé(e) :</h2>
    <ul>
      <% resource.errors.full_messages.each_with_index do |msg, index| %>
        <li>
          <%= msg %>
          <%= "Et" if index < resource.errors.count - 1 %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
